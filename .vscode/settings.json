{
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/coverage": true,
    "**/test-results": true,
    "**/*.log": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/coverage": true,
    "**/test-results": true
  },
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.autoImports": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  
  // Todo Tree Extension Configuration
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "HACK",
    "MOCK",
    "BUG",
    "NOTE"
  ],
  "todo-tree.general.tagGroups": {
    "CRITICAL": ["TODO: CRITICAL", "FIXME: CRITICAL", "MOCK: CRITICAL"],
    "HIGH": ["TODO: HIGH", "FIXME: HIGH", "HACK: HIGH"],
    "MEDIUM": ["TODO: MEDIUM", "FIXME: MEDIUM"]
  },
  "todo-tree.highlights.defaultHighlight": {
    "icon": "alert",
    "type": "text",
    "foreground": "#ffffff",
    "background": "#ffbd2e",
    "opacity": 70,
    "iconColour": "#ffbd2e"
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "checklist",
      "foreground": "#000000",
      "background": "#ffbd2e",
      "iconColour": "#ffbd2e"
    },
    "FIXME": {
      "icon": "tools",
      "foreground": "#ffffff",
      "background": "#f06292",
      "iconColour": "#f06292"
    },
    "HACK": {
      "icon": "flame",
      "foreground": "#000000",
      "background": "#ffa726",
      "iconColour": "#ffa726"
    },
    "MOCK": {
      "icon": "beaker",
      "foreground": "#ffffff",
      "background": "#9c27b0",
      "iconColour": "#9c27b0"
    },
    "BUG": {
      "icon": "bug",
      "foreground": "#ffffff",
      "background": "#f44336",
      "iconColour": "#f44336"
    },
    "NOTE": {
      "icon": "note",
      "foreground": "#000000",
      "background": "#64b5f6",
      "iconColour": "#64b5f6"
    }
  },
  "todo-tree.regex.regex": "((//|#|<!--|;|/\\*|^)\\s*($TAGS)|^\\s*- \\[ \\])",
  "todo-tree.general.statusBar": "total",
  "todo-tree.general.showActivityBarBadge": true,
  "todo-tree.filtering.includeGlobs": [
    "**/*.ts",
    "**/*.js",
    "**/*.sh",
    "**/*.sql",
    "**/*.yml",
    "**/*.yaml",
    "**/*.json"
  ],
  "todo-tree.filtering.excludeGlobs": [
    "**/node_modules/**",
    "**/dist/**",
    "**/build/**",
    "**/coverage/**",
    "**/.git/**"
  ],
  
  // Existing todohighlight configuration (fallback)
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "color": "#ff6b6b",
      "backgroundColor": "rgba(255, 107, 107, 0.1)",
      "borderRadius": "2px"
    },
    {
      "text": "FIXME:",
      "color": "#feca57",
      "backgroundColor": "rgba(254, 202, 87, 0.1)",
      "borderRadius": "2px"
    },
    {
      "text": "HACK:",
      "color": "#ff9ff3",
      "backgroundColor": "rgba(255, 159, 243, 0.1)",
      "borderRadius": "2px"
    },
    {
      "text": "XXX:",
      "color": "#ff6348",
      "backgroundColor": "rgba(255, 99, 72, 0.1)",
      "borderRadius": "2px"
    },
    {
      "text": "MOCK:",
      "color": "#ff9500",
      "backgroundColor": "rgba(255, 149, 0, 0.1)",
      "borderRadius": "2px"
    },
    {
      "text": "DEBUG:",
      "color": "#70a1ff",
      "backgroundColor": "rgba(112, 161, 255, 0.1)",
      "borderRadius": "2px"
    }
  ],
  "todohighlight.include": [
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.jsx",
    "**/*.json",
    "**/*.md"
  ],
  "todohighlight.exclude": [
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**"
  ],
  "todo-tree.filtering.excludeGlobs": [
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**"
  ],
  "todo-tree.highlights.enabled": true,
  "todo-tree.highlights.defaultHighlight": {
    "type": "text-and-comment"
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "foreground": "#ff6b6b",
      "background": "rgba(255, 107, 107, 0.1)",
      "iconColour": "#ff6b6b",
      "icon": "alert"
    },
    "FIXME": {
      "foreground": "#feca57",
      "background": "rgba(254, 202, 87, 0.1)",
      "iconColour": "#feca57",
      "icon": "bug"
    },
    "HACK": {
      "foreground": "#ff9ff3",
      "background": "rgba(255, 159, 243, 0.1)",
      "iconColour": "#ff9ff3",
      "icon": "tools"
    },
    "XXX": {
      "foreground": "#ff6348",
      "background": "rgba(255, 99, 72, 0.1)",
      "iconColour": "#ff6348",
      "icon": "flame"
    },
    "MOCK": {
      "foreground": "#ff9500",
      "background": "rgba(255, 149, 0, 0.1)",
      "iconColour": "#ff9500",
      "icon": "package"
    }
  },
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "HACK",
    "XXX",
    "MOCK",
    "DEBUG",
    "NOTE",
    "REVIEW"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^[ \\t]*(-|\\*))\\s*($TAGS)",
  "git.ignoreLimitWarning": true,
  "emmet.includeLanguages": {
    "typescript": "html"
  },
  "jest.jestCommandLine": "npx jest",
  "jest.autoRun": {
    "watch": false,
    "onSave": "test-src-file"
  },
  "jest.rootPath": ".",
  "jest.disabledWorkspaceFolders": [],
  "jest.pathToJest": "./node_modules/.bin/jest",
  "jest.pathToConfig": "./jest.config.js",
  "jest.runMode": "on-demand",
  "jest.outputConfig": {
    "revealOutput": "on-run",
    "revealWithFocus": "test-results",
    "clearOnRun": "none"
  },
  "problems.decorations.enabled": true,
  "explorer.compactFolders": false,
  "breadcrumbs.enabled": true,
  "outline.showVariables": true,
  "workbench.editor.enablePreview": false,
  "workbench.startupEditor": "none",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "debug.console.wordWrap": true,
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.rulers": [80, 120],
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "npm.enableRunFromFolder": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "sonarlint.connectedMode.project": {
    "connectionId": "shand-j",
    "projectKey": "shand-j_shifty"
  },
  "todo-tree.tree.scanMode": "workspace only"
}
