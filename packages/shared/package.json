{
  "name": "@shifty/shared",
  "version": "1.0.0",
  "description": "Shared utilities and types for Shifty platform",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@faker-js/faker": "^9.3.0",
    "zod": "^3.22.0",
    "uuid": "^9.0.0",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@types/uuid": "^9.0.0",
    "typescript": "^5.2.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./types": {
      "import": "./dist/types/index.js", 
      "require": "./dist/types/index.js"
    },
    "./utils": {
      "import": "./dist/utils/index.js",
      "require": "./dist/utils/index.js"
    },
    "./mocks/store": {
      "import": "./dist/mocks/store.js",
      "require": "./dist/mocks/store.js"
    },
    "./mocks/factories": {
      "import": "./dist/mocks/factories.js",
      "require": "./dist/mocks/factories.js"
    }
  }
}