{
  "name": "shifty",
  "version": "1.0.0",
  "description": "AI-Powered Multi-Tenant Test Automation Platform",
  "private": true,
  "workspaces": [
    "packages/shared",
    "packages/ai-framework",
    "packages/database",
    "packages/sdk-core",
    "packages/sdk-playwright",
    "apps/api-gateway",
    "services/tenant-manager",
    "services/auth-service",
    "services/ai-orchestrator",
    "services/test-generator",
    "services/healing-engine",
    "services/gpu-provisioner",
    "services/model-registry",
    "services/data-lifecycle",
    "services/hitl-arcade",
    "services/cicd-governor",
    "services/production-feedback",
    "services/integrations"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "jest",
    "test:api": "jest --testPathPattern=tests/api",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:sonar": "jest --coverage --coverageReporters=lcov --coverageReporters=text",
    "sonar": "sonar-scanner",
    "sonar:local": "npm run test:coverage:sonar && sonar-scanner",
    "quality:check": "npm run test:coverage && npm run lint && npm run type-check",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "clean:coverage": "rm -rf coverage",
    "deploy:dev": "turbo run deploy --filter=@shifty/infrastructure",
    "deploy:prod": "turbo run deploy:prod --filter=@shifty/infrastructure",
    "setup": "./scripts/setup-local-development.sh",
    "start": "./scripts/dev.sh",
    "validate": "./scripts/validate-system.sh",
    "status": "./scripts/status.sh",
    "kill": "for port in 3000 3001 3002 3003 3004 3005; do lsof -ti:$port | xargs kill -9 2>/dev/null || true; done",
    "kill:graceful": "pkill -TERM -f shifty && sleep 3 && pkill -9 -f shifty",
    "install:all": "npm install",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axios": "^1.6.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.5",
    "turbo": "^1.10.0",
    "typescript": "^5.2.0",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shifty-ai/shifty.git"
  },
  "license": "MIT"
}
