# Environment Configuration for Shifty Development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/shifty_platform

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# AI Service Configuration
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_TIMEOUT=60000
AI_MODEL=llama3.1:8b
AI_HEALING_MODEL=phi3:mini
AI_CODE_MODEL=codellama:7b

# Service Ports
PORT_TENANT_MANAGER=3001
PORT_AUTH_SERVICE=3002
PORT_AI_ORCHESTRATOR=3003
PORT_TEST_RUNNER=3004
PORT_HEALING_ENGINE=3005
PORT_API_GATEWAY=3000
PORT_WEB=3010
PORT_ROI_SERVICE=3015
PORT_PERFORMANCE_TESTING=3016
PORT_SECURITY_TESTING=3017
PORT_ACCESSIBILITY_TESTING=3018
PORT_MANUAL_SESSION_HUB=3019
PORT_QE_COLLABORATOR=3020

# Service URLs (for API Gateway)
TENANT_MANAGER_URL=http://localhost:3001
AUTH_SERVICE_URL=http://localhost:3002
AI_ORCHESTRATOR_URL=http://localhost:3003
TEST_GENERATOR_URL=http://localhost:3004
HEALING_ENGINE_URL=http://localhost:3005
ROI_SERVICE_URL=http://localhost:3015
PERFORMANCE_TESTING_URL=http://localhost:3016
SECURITY_TESTING_URL=http://localhost:3017
ACCESSIBILITY_TESTING_URL=http://localhost:3018
MANUAL_SESSION_HUB_URL=http://localhost:3019
HITL_ARCADE_URL=http://localhost:3011
CICD_GOVERNOR_URL=http://localhost:3012

# Security Configuration
JWT_SECRET=dev-secret-key-change-in-production-use-at-least-32-chars
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3010

# Logging Configuration
LOG_LEVEL=info
NODE_ENV=development

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
ALLOWED_FILE_TYPES=.js,.ts,.json,.yml,.yaml

# S3 Configuration (for development - use local storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
S3_ENDPOINT=http://localhost:9000
S3_FORCE_PATH_STYLE=true

# Kubernetes Configuration (for development)
KUBECONFIG=~/.kube/config
KUBECTL_CONTEXT=docker-desktop

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Feature Flags
FEATURE_AI_GENERATION=true
FEATURE_SELECTOR_HEALING=true
FEATURE_VISUAL_TESTING=false
FEATURE_LOAD_TESTING=false

# Development Tools
PLAYWRIGHT_BROWSERS=chromium,firefox,webkit
PLAYWRIGHT_HEADLESS=true

# Webhook Configuration
WEBHOOK_SECRET=dev-webhook-secret-change-in-production

# Email Configuration (development)
SMTP_HOST=localhost
SMTP_PORT=1025  # MailHog for development
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@shifty.dev

# Slack/Teams Integration (optional)
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
TEAMS_WEBHOOK_URL=