{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true
  },
  "references": [
    { "path": "./packages/shared" },
    { "path": "./packages/ai-framework" },
    { "path": "./packages/database" },
    { "path": "./services/tenant-manager" },
    { "path": "./services/ai-orchestrator" }
  ]
}